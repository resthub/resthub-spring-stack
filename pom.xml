<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>

    <groupId>org.resthub</groupId>
    <artifactId>resthub-spring-stack</artifactId>
    <version>2.2.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>RESThub Spring stack</name>
    <url>http://resthub.org</url>
    <description>RESThub Spring stack is an designed to allow you to build web applications following KISS (Keep It Simple, Stupid), DRY (Don't Repeat Yourself) and REST principles.</description>

    <properties>
        <env>local</env>

        <spring.version>4.1.1.RELEASE</spring.version>
        <spring.data.commons.version>1.9.0.RELEASE</spring.data.commons.version>

        <logback.version>1.1.2</logback.version>
        <slf4j.version>1.7.7</slf4j.version>
        <servlet.version>3.1.0</servlet.version>
        <jsr250.version>1.0</jsr250.version>
        <javax.inject.version>1</javax.inject.version>

        <maven.jetty.version>9.2.2.v20140723</maven.jetty.version>
        <maven.jetty.test.version>8.1.15.v20140411</maven.jetty.test.version>
        <jetty.port>8080</jetty.port>
        <maven.compiler.version>3.1</maven.compiler.version>
        <maven.resources.version>2.6</maven.resources.version>
        <maven.failsafe.version>2.17</maven.failsafe.version>
        <maven.surefire.version>2.17</maven.surefire.version>
        <maven.site.version>3.4</maven.site.version>
        <maven.war.version>2.4</maven.war.version>
        <maven.clean.version>2.5</maven.clean.version>
        <maven.javadoc.version>2.9.1</maven.javadoc.version>
        <maven.deploy.version>2.8.2</maven.deploy.version>
        <maven.archetype.version>2.2</maven.archetype.version>
        <maven-release-plugin.version>2.5</maven-release-plugin.version>
        <maven.source.version>2.3</maven.source.version>
        <maven.install.version>2.5.2</maven.install.version>
        <maven.assembly.version>2.4.1</maven.assembly.version>
        <maven.project.info.reports.version>2.7</maven.project.info.reports.version>
        <maven.surefire.reports.version>2.17</maven.surefire.reports.version>

        <testng.version>6.8.8</testng.version>
        <fest.assert.version>2.0M10</fest.assert.version>
        <mockito.version>1.9.5</mockito.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>resthub-common</module>
        <module>resthub-jpa</module>
        <module>resthub-mongodb</module>
        <module>resthub-test</module>
        <module>resthub-web</module>
    </modules>

    <issueManagement>
        <system>RESThub issue tracker</system>
        <url>https://github.com/resthub/resthub-spring-stack/issues</url>
    </issueManagement>
    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>
    <inceptionYear>2009</inceptionYear>
    <mailingLists>
        <mailingList>
            <name>Resthub developer group</name>
            <subscribe>resthub-dev@googlegroups.com</subscribe>
            <unsubscribe>resthub-dev-unsubscribe@googlegroups.com</unsubscribe>
            <post>resthub-dev@googlegroups.com</post>
            <archive>http://groups.google.com/group/resthub-dev</archive>
        </mailingList>
    </mailingLists>
