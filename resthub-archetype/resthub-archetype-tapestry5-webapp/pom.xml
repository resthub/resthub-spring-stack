	<artifactId>resthub-archetype-tapestry5-webapp</artifactId>
	<packaging>maven-archetype</packaging>

	<name>RESThub Tapestry5 webapp archetype</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
